@model IEnumerable<ASPNetCoreMVC.Models.User>
    
   

@{
    ViewData["Title"] = "User Details";
}

        <div class="jumbotron">
            <h1 class="text-center">@ViewData["Title"]</h1>
        </div>

      @if (TempData["AlertMessage"] != null)
      { 
          
               <div class="alert alert-success">
               <strong>Succcess  </strong>@TempData["AlertMessage"]
               </div>
      }

    <hr>
    <br>

    <table class="table table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.LastName)
			</th>
			<th scope="col">
				@Html.DisplayNameFor(model => model.ContactNumber)
			</th>
            <th scope="col">
              @Html.DisplayNameFor(model => model.City)
            </th>
            <div class="col-md-6">
                <th>
                <a asp-action="AddOrEditUser" button type="button" class="btn btn-success btn-lg btn-block" styles="text-align:center;"><i class="fa-solid fa-plus"></i><b>Add New User</b></a>
                </th>
            </div>
        </tr>
    </thead>
    <tbody>
@foreach(var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            <td >
                @Html.DisplayFor(modelItem => item.LastName)               
            </td>
		    <td >
				@Html.DisplayFor(modelItem => item.ContactNumber)
		    </td>
            <td >
                @Html.DisplayFor(modelItem => item.City)
            </td>
            
          <td>
              <div class="btn-group">
                        <a asp-action="AddOrEditUser"  button type="button" asp-route-id="@item.ID" class="btn btn-primary btn-block">
							<i class="fa-solid fa-pen-to-square"></i>&nbsp;Edit
						</a>

                        @*<form asp-action="AddOrEditUser" asp-route-id="@item.ID">
                            <button type="submit" class="btn btn-primary btn-block">
                                <i class="fa-solid fa-pen-to-square"></i>&nbsp;Edit
                            </button>
                        </form>*@
                        <b>&nbsp; | &nbsp;</b>
                        <form asp-action="Delete" asp-route-id="@item.ID">
                            <button type="submit" class="btn btn-danger  btn-block" 
                                onclick="return confirm('Are you sure to delete this record')">
								<i class="fa-solid fa-square-minus"></i>&nbsp;Delete
                            </button>
						</form>
              </div>
               
          </td>
        </tr>
}
    </tbody>
</table>

